
<body>
  <h1>Ironhacker Be Like {{name}}</h1>
  <p>Age: {{age}}</p>

  {{#unless condition}}  
    <p>False</p>
  {{/unless}}
  <ul>
    {{#each array}}
      <li>index: {{@index}} value: {{this}}</li>
    {{else}}
      
    {{/each}}
    {{#each array}}
      {{#if @first}}
        <li><b>{{this}}</b></li>
      {{else if @last}}
        <li><i>{{this}}</i></li>
      {{else}}
        <li>{{this}}</li>
      {{/if}}
      
    {{/each}}

    {{#with address}}
      <p>{{street}}, {{number}}</p>
    {{/with}}

  </ul>
  <img src="https://media.giphy.com/media/l0MYEqEzwMWFCg8rm/giphy.gif">
</body>
